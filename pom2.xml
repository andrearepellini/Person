    <build>
        <finalName>${project.artifactId}-${version}</finalName>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>3.2.0</version>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>src/contract/java</source>
                                <source>src/contract/resources</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!--  This plugin config automatically configures maven to create a fat jar. -->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>2.6.6</version>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>swaggerFeign</id>
            <build>

                <plugins>

                    <plugin>
                        <groupId>org.openapitools</groupId>
                        <artifactId>openapi-generator-maven-plugin</artifactId>
                        <version>5.4.0</version>
                        <executions>
                            <execution>
                                <id>api-onboarding-dossier.yaml</id>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                                <configuration>
                                    <generatorName>spring</generatorName>
                                    <addCompileSourceRoot>false</addCompileSourceRoot>
                                    <skipOverwrite>false</skipOverwrite>
                                    <inputSpec>${project.basedir}/src/contract/resources/person.yaml</inputSpec><!--pathtotheopenapiservicesdefinitionfile-->
                                    <apiPackage>com.example.SwaggerFeignDemo.api
                                    </apiPackage><!--packagefortheservicedefinitions-->
                                    <modelPackage>com.example.SwaggerFeignDemo.model
                                    </modelPackage><!--packageforthemodelclasses-->
                                    <packageName>com.example.SwaggerFeignDemo</packageName><!--basepackage-->
                                    <withXml>false</withXml>
                                    <generateApiDocumentation>false</generateApiDocumentation>
                                    <generateModelDocumentation>false</generateModelDocumentation>
                                    <output>${project.basedir}</output>
                                    <generateSupportingFiles>true</generateSupportingFiles>
                                    <supportingFilesToGenerate>ApiUtil.java</supportingFilesToGenerate>
                                    <configOptions>
                                        <hideGenerationTimestamp>true</hideGenerationTimestamp>
                                        <useTags>true</useTags>
                                        <sourceFolder>src/contract/java</sourceFolder>
                                        <dateLibrary>java11</dateLibrary>
                                        <interfaceOnly>true</interfaceOnly>
                                        <useBeanValidation>true</useBeanValidation>
                                        <documentationProvider>none</documentationProvider>
                                        <annotationLibrary>swagger2</annotationLibrary>
                                        <openApiNullable>false</openApiNullable>
                                    </configOptions>
                                </configuration>
                            </execution>

                        </executions>

                    </plugin>


                </plugins>
            </build>
        </profile>



    </profiles>



</project>